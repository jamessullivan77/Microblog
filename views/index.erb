<% if flash[:notice] %>
    <div id="notice">
        <%= flash[:notice] %>
    </div>
    <% end %>
    <h1>Login</h1>
    <%= "Session:" + session[:user_id].to_s %>
    <%= @current_user %>
    <% if @current_user %>
        <h2>Welcome <%= @current_user.fname %>!!</h2>
        <a href="/logout">Log Out</a>
    <% end %>
    <%= erb :login unless @current_user %>